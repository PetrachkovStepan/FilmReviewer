<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <TableView fx:id="table1" prefHeight="267.0" prefWidth="268.0">
     <columns>
       <TableColumn id="name" fx:id="name" prefWidth="75.0" text="Name" />
        <TableColumn id="password" fx:id="password" prefWidth="75.0" text="Password" />
         <TableColumn id="role" fx:id="role" prefWidth="75.0" text="Role" />
         <TableColumn id="isBlocked" fx:id="isBlocked" prefWidth="75.0" text="IsBlocked" />
         <TableColumn id="isRequested" fx:id="isRequested" prefWidth="75.0" text="IsRequested" />
     </columns>
   </TableView>


    <TextField id="ind" fx:id="ind" prefHeight="26.0" prefWidth="438.0" />
   <Button id="button" fx:id="buttonRole" mnemonicParsing="false" text="Change Role" />
    <Button id="button1" fx:id="buttonBlock" mnemonicParsing="false" text="Block User" />
    <Button id="button2" fx:id="buttonRefresh" mnemonicParsing="false" text="Refresh" />
</VBox>
